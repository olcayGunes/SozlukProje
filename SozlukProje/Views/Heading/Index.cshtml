@using EntityLayer.Concrete
@model  List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = ""; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">


        <!-- Content Wrapper. Contains page content -->
            <!-- Content Header (Page header) -->

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Başlık İşlemleri</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        Başlık ID
                                    </th>
                                    <th style="width: 20%">
                                        Başlık Adı
                                    </th>
                                    <th style="width: 30%">
                                        Başlığı Oluşturan Yazar
                                    </th>
                                    <th style="width: 8%" class="text-center">
                                        Kategori
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.Category.CategoryId==1)
                                    {
                                        color = "badge badge-success";
                                    }
                                    else if (item.Category.CategoryId == 2)
                                    {
                                        color = "badge badge-warning";
                                    }
                                    else if (item.Category.CategoryId == 3)
                                    {
                                        color = "badge badge-danger";
                                    }
                                    else if (item.Category.CategoryId == 4)
                                    {
                                        color = "badge badge-info";
                                    }
                                    else if (item.Category.CategoryId == 5)
                                    {
                                        color = "badge badge-dark";
                                    }
                                    else if (item.Category.CategoryId == 6)
                                    {
                                        color = "badge badge-pill";
                                    }
                                    else if (item.Category.CategoryId == 7)
                                    {
                                        color = "badge badge-primary";
                                    }
                                    else if (item.Category.CategoryId == 8)
                                    {
                                        color = "badge badge-secondary";
                                    }
                                    else
                                    {
                                        color = "badge badge-light";
                                    }

                                <tr>
                                    <td>
                                        @item.HeadingId
                                    </td>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br />
                                        <small>
                                            @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"));
                                        </small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                                <p><b>@item.Writer.WriterName @item.Writer.WriterSurName</b></p>
                                            </li>
                                          
                                        </ul>
                                    </td>
                                    
                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Content/GetContentByHeading/@item.HeadingId">
                                            <i class="fas fa-folder">
                                            </i>
                                            Gönderiler
                                        </a>
                                        <a class="btn btn-info btn-sm" href="#">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="#">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                                }
                           
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>

</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Oluştur</a>


